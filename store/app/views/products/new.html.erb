<!DOCTYPE html>
<html>
<head>
    <link href="styles.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <h1>CREATE PRODUCT</h1>
  <%= form_for @product do |f| %>

    <div> <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div> <%= f.label :description %>
      <%= f.text_area :description%>
    </div>

    <div> <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div> <%= f.submit value="Create"%>
    </div>

  <% end %>
</body>
</html>
